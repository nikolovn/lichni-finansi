    <div class="panel-heading"><%= t 'income_categories.income_transactions' %></div>
    <div class="panel-body">
    <%= link_to '',  new_income_category_path, title: "#{t 'income_categories.new_category'}", class: 'glyphicon glyphicon-download-alt' %>
    <%= link_to "#{t 'income_categories.new_category'}",  new_income_category_path %><table class="table table-bordered table-hover table-condensed table-striped table-responsive">    <br><br>    <thead>
          <tr>
            <th><%= t 'income_categories.category' %></th>
            <th><%= t 'income_categories.action' %></th>
          </tr>
        </thead>
    <% @income_categories.each do |category| %>
          
            <tr>
              <td><%= category.name %>
                
              </td>
              <td><div id="<%=category.name%>_transactions" style="display:none;" >
