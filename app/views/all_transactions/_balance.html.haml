#balance{:class => "tab-pane #{@active_balance}"}
  %table.table.table-bordered.table-hover.table-condensed.table-striped.table-responsive
    %thead
      %tr
        %th
          = t 'all_transactions.current_balance'
          \: #{number_to_currency(@current_balance, unit: 'лв.', separator: ",", delimiter: "", format: "%n %u")}

