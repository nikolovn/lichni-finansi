$("#add_transaction_message_<%= @transaction.expense_category_id %>").html("<%= escape_javascript(render partial: 'shared/message', locals: { model: @transaction  }) %>");


setTimeout(function(){
  $("#add_transaction_message_<%= @transaction.expense_category_id %>").html("");
<% if flash[:error].blank? %>
  $("#<%= @transaction.expense_category_id %>").removeClass('panel-collapse collapse in').addClass("panel-collapse collapse");
<% end %>
}, 5000);