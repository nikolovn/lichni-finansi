
  <div class="panel panel-default">
    <div class="panel-heading"><%= t 'expense_categories.expense_transactions' %></div>
    <div class="panel-body">
<% flash.each do |name, msg| -%>
  <% if name.to_s == 'error' %>
    <div class="alert alert-danger" role="alert">
    <%= content_tag :div, msg, class: name %>
    </div>
  <% end -%>
<% end -%>
<% flash.each do |name, msg| -%>
  <% if name.to_s == 'notice' %>
    <div class="alert alert-success" role="alert">
    <%= content_tag :div, msg, class: name %>
    </div>
  <% end -%>
<% end -%>
<table class="table table-bordered table-hover table-condensed table-striped table-responsive">        <thead>
          <tr>
            <th><%= t 'expense_categories.category' %></th>
            <th><%= t 'expense_categories.action' %></th>
          </tr>
        </thead>
 
 
    <% @expense_parent_categories.each do |category| %>
          
            <tr>
              <td id = "sub_category_link_<%=category.id %>""><b>
                  <%= link_to "#{category.name}",show_sub_category_expense_categories_path(category.id, category_name: category.name), remote: true %></b>
              </td>
              <td>
                <%= link_to 'Edit', edit_expense_category_path(category) %>
                <%= link_to 'Delete', expense_category_path(category.id), method: :delete, data: { confirm: 'Are you sure?' } %>
                </p>
                </td>
            </tr>
            <tr>
              <td colspan = 2>
              <div id = "<%=category.id %>" > </div>
              </td>
            </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to "#{t 'expense_categories.new_category'}", new_expense_category_path %>



    </div>
  </div>